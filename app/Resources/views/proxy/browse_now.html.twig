{% extends 'proxy/base.proxy.html.twig' %}

{% block body %}
    <iframe id="myIframe"></iframe>
    <div class="hide" id="response" data-response>
        {{ response|raw }}
    </div>
    <style>
        iframe{
            margin-top:50px;
            width: 100%;
            border: none;
            height: 100%;
            position:relative;
        }
        body{
            width:100%;
            height:100%;
            position:absolute;
        }
    </style>
    <script>
        var ifrm = document.getElementById('myIframe');
        ifrm = ifrm.contentWindow || ifrm.contentDocument.document || ifrm.contentDocument;
        ifrm.document.open();
        ifrm.document.write('<base href="{{ url }}">'+document.getElementById('response').innerHTML);
        ifrm.document.close();
    </script>
{% endblock %}