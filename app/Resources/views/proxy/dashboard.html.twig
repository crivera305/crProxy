{% extends 'proxy/base.proxy.html.twig' %}

{% block body %}
    <div class="jumbotron">
        <div class="container">
            <h1>Proxy<div><small>Management System</small></div></h1>
        </div>
    </div>
    <div class="wrapper">
        <div class="container">
            <div class="col-sm-12">
                <div class="row">
                    <div class="col-sm-4 col-xs-6 text-center">
                        <h2>{{ onlineProxies|length }}<div><small>Online Proxies</small></div></h2>
                    </div>
                    <div class="col-sm-4 col-xs-6 text-center">
                        <h2>{{ offlineProxies|length }}<div><small>OffLine Proxies</small></div></h2>
                    </div>
                    <div class="col-sm-4 col-xs-6 text-center">
                        <h2>{{ (onlineProxies|length+offlineProxies|length) }}<div><small>Total Proxies</small></div></h2>
                    </div>
                    <div class="col-sm-4 col-xs-6 text-center">
                        <h2>{{ onlineCountryProxies|length }}<div><small>Countries with Online Proxies</small></div></h2>
                    </div>
                    <div class="col-sm-4 col-xs-6 text-center">
                        <h2>{{ offlineCountryProxies|length }}<div><small>Countries with OffLine Proxies </small></div></h2>
                    </div>
                    <div class="col-sm-4 col-xs-6 text-center">
                        <h2>{{ (onlineCountryProxies|length+offlineCountryProxies|length) }}<div><small>Total Countries</small></div></h2>
                    </div>
                </div>
                <hr>
                <ul class="nav nav-tabs">
                    <li class="active"><a data-toggle="tab" href="#menu1">Online Proxies</a></li>
                    <li><a data-toggle="tab" href="#menu2">Offline Proxies</a></li>
                </ul>

                <div class="tab-content">
                    <div id="menu1" class="tab-pane fade in active">
                        {% include 'proxy/partials/proxy_table.html.twig' with { 'proxies': onlineProxies } %}
                    </div>
                    <div id="menu2" class="tab-pane fade">
                        {% include 'proxy/partials/proxy_table.html.twig' with { 'proxies': offlineProxies } %}
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}